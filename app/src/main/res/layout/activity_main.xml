<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xcp.neihan.MainActivity">


    <Button
        android:id="@+id/btn_change_skin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/skinGreen"
        android:text="更换皮肤"
        android:textColor="@color/skinColor" />

    <Button
        android:id="@+id/btn_another"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_change_skin"
        android:layout_margin="10dp"
        android:background="@drawable/home_safe_period_bg"
        android:text="跳转到另一个Activity"
        android:textAllCaps="false"
        android:textColor="@color/skinColor" />

    <Button
        android:id="@+id/btn_default_skin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/btn_another"
        android:background="@drawable/home_safe_period_bg"
        android:text="恢复默认"
        android:textAllCaps="false"
        android:textColor="@color/skinColor" />

    <ImageView
        android:id="@+id/iv_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_default_skin"
        android:src="@drawable/home_safe_period_bg" />

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Hello World!"
        android:textColor="@color/skinColor" />

</RelativeLayout>
